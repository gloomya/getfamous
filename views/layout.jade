html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='#{title} GetFamous is a test node js web app.')
    meta(name='author', content='gloomya')
    meta(name='theme-color', content='white')
    title #{title} SMM Promotion Services
    // Favicon
    link(href='images/favicon.png', rel='icon', type='image/png')
