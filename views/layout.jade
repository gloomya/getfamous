  body
    header.header-global
      nav#navbar-main.navbar.navbar-main.navbar-expand-lg.navbar-transparent.navbar-light.headroom
        .container
          a.navbar-brand.mr-lg-5(href='/')
            img(src='images/logo_white.png', alt='brand')
          button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbar_global', aria-controls='navbar_global', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
          #navbar_global.navbar-collapse.collapse
            .navbar-collapse-header
              .row
                .col-6.collapse-brand
                  a(href='/')
                    img(src='images/logo_blue.png', alt='brand')
                .col-6.collapse-close
                  button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbar_global', aria-controls='navbar_global', aria-expanded='false', aria-label='Toggle navigation')
                    span
                    span
            ul.navbar-nav.navbar-nav-hover.align-items-lg-center
              li.nav-item.dropdown
                a.nav-link(href='about', role='button')
                  i.ni.ni-ui-04.d-lg-none
                  span.nav-link-inner--text About
              li.nav-item.dropdown
                a.nav-link(href='profile', data-toggle='dropdown', role='button')
                  i.ni.ni-collection.d-lg-none
                  span.nav-link-inner--text User
                .dropdown-menu
                  a.dropdown-item(href='profile') Profile
                  a.dropdown-item(href='login') Login
                  a.dropdown-item(href='register') Register
            ul.navbar-nav.align-items-lg-center.ml-lg-auto
              li.nav-item
                a.nav-link.nav-link-icon(href='https://www.facebook.com/nsty.vldkvich', target='_blank', data-toggle='tooltip', title='Like us on Facebook')
                  i.fa.fa-facebook-square
                  span.nav-link-inner--text.d-lg-none Facebook
              li.nav-item
                a.nav-link.nav-link-icon(href='https://www.instagram.com/gloomya', target='_blank', data-toggle='tooltip', title='Follow us on Instagram')
                  i.fa.fa-instagram
                  span.nav-link-inner--text.d-lg-none Instagram
              li.nav-item
                a.nav-link.nav-link-icon(href='https://twitter.com/gloomya', target='_blank', data-toggle='tooltip', title='Follow us on Twitter')
                  i.fa.fa-twitter-square
                  span.nav-link-inner--text.d-lg-none Twitter
              li.nav-item
                a.nav-link.nav-link-icon(href='https://github.com/gloomya/getfamous', target='_blank', data-toggle='tooltip', title='Star us on Github')
                  i.fa.fa-github
                  span.nav-link-inner--text.d-lg-none Github
              li.nav-item.d-none.d-lg-block.ml-lg-4
                a.btn.btn-neutral.btn-icon(href='contact')
                  span.btn-inner--icon
                    i.fa.fa-paper-plane.mr-2
                  span.nav-link-inner--text Contact Us
    main
      block content
    footer.footer.has-cards
      .container
        .row.row-grid.align-items-center.my-md
          .col-lg-6
            h3.text-primary.font-weight-light.mb-2 Thank you for supporting us!
            h4.mb-0.font-weight-light Let's get in touch on any of these platforms.
          .col-lg-6.text-lg-center.btn-wrapper
            a.btn.btn-neutral.btn-icon-only.btn-twitter.btn-round.btn-lg(target='_blank', href='https://twitter.com/gloomya', data-toggle='tooltip', data-original-title='Follow us')
              i.fa.fa-twitter
            a.btn.btn-neutral.btn-icon-only.btn-facebook.btn-round.btn-lg(target='_blank', href='https://www.facebook.com/nsty.vldkvich', data-toggle='tooltip', data-original-title='Like us')
              i.fa.fa-facebook-square
            a.btn.btn-neutral.btn-icon-only.btn-dribbble.btn-lg.btn-round(target='_blank', href='https://dribbble.com/gloomya', data-toggle='tooltip', data-original-title='Follow us')
              i.fa.fa-dribbble
            a.btn.btn-neutral.btn-icon-only.btn-github.btn-round.btn-lg(target='_blank', href='https://github.com/gloomya', data-toggle='tooltip', data-original-title='Star on Github')
              i.fa.fa-github
        hr
        .row.align-items-center.justify-content-md-between
          .col-md-6
