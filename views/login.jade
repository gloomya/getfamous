extends layout

block content
    section.section.section-shaped.section-lg
        .shape.shape-style-1.bg-gradient-default
            span
            span
            span
            span
            span
            span
            span
            span
        .container.pt-lg-md
            .row.justify-content-center
                .col-lg-5
                    .card.bg-secondary.shadow.border-0
                        .card-header.bg-white.pb-5
                            .text-muted.text-center.mb-3
                                small Sign in with
                            .btn-wrapper.text-center
                                a.btn.btn-neutral.btn-icon(href='#')
                                    span.btn-inner--icon
                                        img(alt='image', src='images/instagram.svg')
                                    span.btn-inner--text Instagram
                                a.btn.btn-neutral.btn-icon(href='#')
                                    span.btn-inner--icon
                                        img(alt='image', src='images/facebook.svg')
                                    span.btn-inner--text Facebook
                        .card-body.px-lg-5.py-lg-5
                            .text-center.text-muted.mb-4
                                small Or sign in with credentials
                            form(method='POST', action='/login', name='login')
                                .form-group.mb-3
                                    .input-group.input-group-alternative
                                        .input-group-prepend
                                            span.input-group-text
                                                i.ni.ni-email-83
                                        input.form-control(placeholder='Email', type='email', name='useremail', required='required')
                                .form-group
                                    .input-group.input-group-alternative
                                        .input-group-prepend
                                            span.input-group-text
                                                i.ni.ni-lock-circle-open
                                        input.form-control(placeholder='Password', type='password', name='userpass', required='required')
                                .text-muted.font-italic
                                    small
                                        span.text-danger.font-weight-700 #{err}
                                .text-center
                                    button.btn.btn-primary.my-4(type='submit') Sign in
                    .row.mt-3
                        .col-6
                            a.text-light(href='forgot')
                                small Forgot password?
                        .col-6.text-right
                            a.text-light(href='register')
                                small Create new account
