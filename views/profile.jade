extends layout

block content
    .profile-page
        section.section-profile-cover.section-shaped.my-0
            // Circles background
            .shape.shape-style-1.shape-primary.alpha-4
                span
                span
                span
                span
                span
                span
                span
            // SVG separator
            .separator.separator-bottom.separator-skew
                svg(x='0', y='0', viewBox='0 0 2560 100', preserveAspectRatio='none', version='1.1', xmlns='http://www.w3.org/2000/svg')
                    polygon.fill-white(points='2560 0 2560 100 0 100')
        section.section
            .container
                .card.card-profile.shadow.mt--300
                    .px-4
                        .row.justify-content-center
                            .col-lg-3.order-lg-2
                                .card-profile-image
                                    img.rounded-circle(src='#{avatar}', alt='image')
                            .col-lg-4.order-lg-3.text-lg-right.align-self-lg-center
                                .card-profile-actions.py-4.mt-lg-0
                                    a.btn.btn-sm.btn-info.mr-4(data-toggle='collapse', href='#likes', role='button', aria-expanded='false', aria-controls='likes') Get Likes
                                    a.btn.btn-sm.btn-default.float-right.disabled(href='followers') Get Followers
                            .col-lg-4.order-lg-1
                                .card-profile-stats.d-flex.justify-content-center
                                    div
                                        span.heading #{projects}
                                        span.description Projects
                                    div
                                        span.heading #{fblikes + instalikes}
                                        span.description Likes
                                    div.opacity-3
                                        span.heading #{fbfollowers + instafollowers}
                                        span.description Followers
                        .text-center.mt-5
                            h3
                                | #{username}
                            .h6.font-weight-300
                                i.fa.fa-facebook-square.mr-2
                                | #{fbprofile}
                            div
                                | Welcome to GETFAMOUS! Pick one of the options above to get started.  
                        p
                            #likes.collapse
                                .card.card-body
                                    .row
                                        .col-lg-3
                                            img.img-fluid.rounded.shadow-lg(src='images/likes.jpg', alt='image', width='220')
                                        .col-lg-9
                                            .card-header.bg-white.pb-5
                                                .text-muted.mb-3
                                                    small Likes on your posts and photos
                                            form(method='POST', action='/likes', name='login')
                                                .form-group.mb-3
                                                .row
                                                    .col-lg-6
                                                        | Price: #{total}
                                                        
                                                    .col-lg-6
                                                        label(for='amount')
                                                            | Number: 
                                                        .input-group.input-group-alternative
                                                            .input-group-prepend
                                                                span.input-group-text
                                                                    i.ni.ni-bag-17
                                                            input.form-control(placeholder='1', type='number', name='amount', required='required')
                                                .form-group.mt-3
                                                    .input-group.input-group-alternative
                                                        .input-group-prepend
                                                            span.input-group-text
                                                                i.ni.ni-lock-circle-open
                                                        input.form-control(placeholder='Password', type='password', name='userpass', required='required')
                                                .text-muted.font-italic
                                                    small
                                                        span.text-danger.font-weight-700 #{ordererr}
                                                .text-center
                                                    button.btn.btn-primary.my-4(type='submit') Order Now
                            
                                                        
                        .mt-5.py-5.border-top.text-center
                            .row.justify-content-center
                                .col-lg-9
                                    a.btn.btn-danger.mb-3.mb-sm-0(href='logout') Log Out
                                    a.btn.btn-light.mb-3.mb-sm-0(href='setup') Settings
